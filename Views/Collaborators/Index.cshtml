@model IEnumerable<StoreManager.Models.Collaborators>
@{
    ViewData["Title"] = "Colaboradores";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum colaborador cadastrado</p>
    <a class="btn btn-outline-dark" asp-controller="Collaborators" asp-action="Add">Cadastre um novo colaborador</a>
}
else
{
    <table class="table table-white">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Cargo</th>
                <th>GÃªnero</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var colaborator in Model)
            {
                <tr>
                    <td>@colaborator.Id</td>
                    <td>@colaborator.Name</td>
                    <td>@colaborator._Function</td>
                    <td>@colaborator.Gender</td>
                    <td>
                        <a class="btn btn-outline-info" asp-controller="Collaborators" asp-action="Show" asp-route-id="@colaborator.Id">Ver</a>
                        <a class="btn btn-outline-warning" asp-controller="Collaborators" asp-action="Update" asp-route-id="@colaborator.Id">Update</a>
                        <a class="btn btn-outline-danger" asp-controller="Collaborators" asp-action="Delete" asp-route-id="@colaborator.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-outline-dark" asp-controller="Collaborators" asp-action="Add">Cadastre um novo colaborador</a>
}