@model StoreManager.Models.Inventories
@{
    ViewData["Title"] = "Atualizar Invantário";
}
<h1>@ViewData["Title"]</h1>

<form class="form" asp-controller="Inventories" asp-action="Update" asp-route-id="@Model.Id" method="POST">    
    <label for="Address">Endereço: </label>
    <input type="text" id="Address" name="Address" asp-for="@Model.Address">
    <span asp-validation-for="@Model.Address" class="text-danger"></span>

    <label for="Capacity">Capacidade de produtos: </label>
    <input type="number" id="Capacity" name="Capacity" asp-for="@Model.Capacity">
    <span asp-validation-for="@Model.Capacity" class="text-danger"></span>
    
    <input class="submit" type="submit" value="Atualizar">
</form>