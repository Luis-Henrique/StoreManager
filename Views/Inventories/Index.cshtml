@model IEnumerable<StoreManager.Models.Inventories>
@{
    ViewData["Title"] = "Inventários";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum inventário cadastrado</p>
    <a class="btn btn-outline-dark" asp-controller="Inventories" asp-action="Add">Cadastre um novo inventário</a>
}
else
{
    <table class="table table-white">
        <thead>
            <tr>
                <th>Endereço</th>
                <th>Capacidade de produtos</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var inventory in Model)
            {
                <tr>
                    <td>@inventory.Id</td>
                    <td>@inventory.Address</td>
                    <td>@inventory.Capacity</td>
                    <td>
                        <a class="btn btn-outline-info" asp-controller="Inventories" asp-action="Show" asp-route-id="@inventory.Id">Ver</a>
                        <a class="btn btn-outline-warning" asp-controller="Inventories" asp-action="Update" asp-route-id="@inventory.Id">Update</a>
                        <a class="btn btn-outline-danger" asp-controller="Inventories" asp-action="Delete" asp-route-id="@inventory.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-outline-dark" asp-controller="Inventories" asp-action="Add">Cadastre um novo inventário</a>
}