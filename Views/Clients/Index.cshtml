@model IEnumerable<StoreManager.Models.Clients>
@{
    ViewData["Title"] = "Clientes";
}
<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Nenhum cliente cadastrado</p>
    <a class="btn btn-outline-dark" asp-controller="Clients" asp-action="Add">Cadastre um novo cliente</a>
}
else
{
    <table class="table table-white">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Gênero</th>
                <th>E-mail</th>
                <th>Número</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var client in Model)
            {
                <tr>
                    <td>@client.Id</td>
                    <td>@client.Name</td>
                    <td>@client.Gender</td>
                    <td>@client.Email</td>
                    <td>@client.Number</td>
                    <td>
                        <a class="btn btn-outline-info" asp-controller="Clients" asp-action="Show" asp-route-id="@client.Id">Ver</a>
                        <a class="btn btn-outline-warning" asp-controller="Clients" asp-action="Update" asp-route-id="@client.Id">Update</a>
                        <a class="btn btn-outline-danger" asp-controller="Clients" asp-action="Delete" asp-route-id="@client.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-outline-dark" asp-controller="Clients" asp-action="Add">Cadastre um novo cliente</a>
}