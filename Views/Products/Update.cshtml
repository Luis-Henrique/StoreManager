@model StoreManager.Models.Products
@{
    ViewData["Title"] = "Atualizar produtos";
}
<h1>@ViewData["Title"]</h1>

<form class="form" asp-controller="Products" asp-action="Update" asp-route-id="@Model.Id" method="POST">    
    <label for="Name">Name: </label>
    <input type="text" id="Name" name="Name" asp-for="@Model.Name">
    <span asp-validation-for="@Model.Name" class="text-danger"></span>

    <label for="Description">Descrição: </label>
    <input type="text" id="Description" name="Description" asp-for="@Model.Description">
    <span asp-validation-for="@Model.Description" class="text-danger"></span>

    <label for="Price">Preço: </label>
    <input type="number" id="Price" name="Price" asp-for="@Model.Price">
    <span asp-validation-for="@Model.Price" class="text-danger"></span>

    <input class="submit" type="submit" value="Atualizar">
</form>